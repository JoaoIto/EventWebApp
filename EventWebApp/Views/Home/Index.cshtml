@{
    ViewBag.Title = "Home Page";
}

<main class="container mt-5">
    <section class="text-center">
        <h1 id="title" class="display-4">Bem-vindo ao Gerenciador de Eventos</h1>
        <p class="lead">Uma aplicação completa para gerenciar eventos, participantes e muito mais!</p>
        <p>
            <a href="#" class="btn btn-outline-primary btn-lg">Saiba Mais</a>
        </p>
    </section>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-header d-flex justify-content-center align-items-center">
                    <i class="fas fa-users fa-2x mr-2" style="color: #007bff;"></i>
                    <h4 class="my-0 font-weight-normal">Gerenciar Usuários</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">Adicione, edite ou remova usuários da sua aplicação.</p>
                    <a class="btn btn-primary" href="@Url.Action("Index", "Usuarios")">Acessar</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-header d-flex justify-content-center align-items-center">
                    <i class="fas fa-user-check fa-2x mr-2" style="color: #28a745;"></i>
                    <h4 class="my-0 font-weight-normal">Gerenciar Participações</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">Gerencie as participações dos usuários nos eventos.</p>
                    <a class="btn btn-primary" href="@Url.Action("Index", "Participacaos")">Acessar</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-header d-flex justify-content-center align-items-center">
                    <i class="fas fa-calendar-alt fa-2x mr-2" style="color: #ffc107;"></i>
                    <h4 class="my-0 font-weight-normal">Gerenciar Eventos</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">Crie, edite ou remova eventos com facilidade.</p>
                    <a class="btn btn-primary" href="@Url.Action("Index", "Eventoes")">Acessar</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
                <div class="card-header d-flex justify-content-center align-items-center">
                    <i class="fas fa-comments fa-2x mr-2" style="color: #17a2b8;"></i>
                    <h4 class="my-0 font-weight-normal">Gerenciar Comentários</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">Visualize e modifique os comentários dos usuários sobre os eventos.</p>
                    <a class="btn btn-primary" href="@Url.Action("Index", "Comentarios")">Acessar</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
                <div class="card-header d-flex justify-content-center align-items-center">
                    <i class="fas fa-tags fa-2x mr-2" style="color: #6f42c1;"></i>
                    <h4 class="my-0 font-weight-normal">Gerenciar Categorias</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">Organize seus eventos em categorias para facilitar a navegação.</p>
                    <a class="btn btn-primary" href="@Url.Action("Index", "Categorias")">Acessar</a>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Inclua o Font Awesome para ícones -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
    }

    .card-header {
        background-color: #007bff;
        color: white;
    }

    .card-text {
        margin-bottom: 1.5rem;
    }
</style>
